{
  "name": "ac-api",
  "version": "1.0.0",
  "description": "Avenue Code NodeJS Challenge",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "NODE_ENV=test nyc --reporter=lcov ava && nyc report",
    "lint": "standard --verbose | snazzy"
  },
  "bin": {
    "nyc": "./node_modules/.bin/nyc",
    "ava": "./node_modules/.bin/ava",
    "standard": "./node_modules/.bin/standard"
  },
  "author": "Rafael Jesus",
  "license": "ISC",
  "standard": {
    "parser": "babel-eslint"
  },
  "ava": {
    "babel": {
      "presets": [
        "es2015",
        "stage-2"
      ]
    },
    "files": [
      "test/**/*spec.js"
    ],
    "failFast": true,
    "require": [
      "babel-register",
      "babel-polyfill",
      "./lib/db"
    ]
  },
  "dependencies": {
    "bcrypt": "^0.8.6",
    "bluebird": "^3.3.5",
    "jwt-simple": "^0.5.0",
    "kcors": "^2.1.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.0.0",
    "koa-logger": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-validate": "^1.0.0",
    "mongoose": "^4.4.14"
  },
  "devDependencies": {
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.2",
    "nyc": "^6.4.0",
    "snazzy": "^3.0.1",
    "standard": "^7.0.0-beta.0",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.1.0"
  }
}
